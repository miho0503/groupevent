<h1>Listing groups</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Organization date</th>
      <th colspan="3"></th>
<!-- events/indeh.html.erb からコピペして作成 ↓ここから -->
      <th>Name</th>
      <th>Description</th>
      <th>Event date</th>
      <th colspan="3"></th>
<!-- events/indeh.html.erb からコピペして作成 ↑ここまで -->
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= group.organization_date %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <!-- groupに紐づいているeventを表示 ↓ここから -->
        <% group.events.each_with_index do |event, i| %>

          <!-- groupに紐づいているeventが複数ある場合は空白のgroup欄を作る ↓ここから -->
          <% if 0<i %>
            </tr><tr><td colspan=6></td>
          <%end %>
          <!-- groupに紐づいているeventが複数ある場合は空白のgroup欄を作る ↑ここまで -->

          <!-- eventの情報を表示(ひとつぶん) events/indeh.html.erb からコピペして作成 ↓ここから -->
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.event_date %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <!-- eventの情報を表示(ひとつぶん) events/indeh.html.erb からコピペして作成 ↑ここまで -->
        <% end %>
        <!-- groupに紐づいているeventを表示 ↑ここまで -->

      </tr>
    <% end %>
  </tbody>
</table>

